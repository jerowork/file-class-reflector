<?xml version="1.0"?>
<ruleset name="Project CodeSniffer ruleset"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <description>Project CodeSniffer ruleset</description>

    <!-- Import PSR-12 coding standard (base) -->
    <!-- https://github.com/squizlabs/PHP_CodeSniffer/blob/master/src/Standards/PSR12/ruleset.xml -->
    <rule ref="PSR12">
        <exclude name="PSR12.Functions.ReturnTypeDeclaration.SpaceBeforeColon"/>
    </rule>

    <exclude-pattern>*/tests/*</exclude-pattern>
</ruleset>
